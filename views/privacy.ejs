<!-- views/policies.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Diane Peters Attorneys -<%= privacyPolicy.title%></title>
    <link rel="stylesheet" href="/style.css" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
</head>
<body>
    <header class="header">
        <div class="logo">
           <!-- Logo integration: D and P -->
           <img class="logo-icon" src="/android-chrome-192x192.png" alt="">
           <p class="company-name" >Diane Peters Attorneys</p>
           <p class="tagline" >For the People</p>
         </div>
       </header>
    <div class="x-feed">
        <h1><%= privacyPolicy.title %></h1>
        <h4>Version: <%= privacyPolicy.version%></h4>
        <h4>Effective date: <%= privacyPolicy.effectiveDate%></h4>
        <p><strong>Introduction:</strong> <%= privacyPolicy.introduction %></p>

        <section>
            <h2>Information We Collect</h2>
            <h3>Personal Information:</h3>
            <ul>
                <% privacyPolicy.informationWeCollect.personalInformation.forEach(function(info) { %>
                    <li><%= info %></li>
                <% }); %>
            </ul>
            <h3>Non-Personal Information:</h3>
            <ul>
                <% privacyPolicy.informationWeCollect.nonPersonalInformation.forEach(function(info) { %>
                    <li><%= info %></li>
                <% }); %>
            </ul>
        </section>

        <section>
            <h2>How We Use Information</h2>
            <ul>
                <% privacyPolicy.howWeUseInformation.forEach(function(usage) { %>
                    <li><%= usage %></li>
                <% }); %>
            </ul>
        </section>

        <section>
            <h2>Data Sharing and Disclosure</h2>
            <ul>
                <% privacyPolicy.dataSharingAndDisclosure.forEach(function(disclosure) { %>
                    <li><%= disclosure %></li>
                <% }); %>
            </ul>
        </section>

        <section>
            <h2>Data Security</h2>
            <p><%= privacyPolicy.dataSecurity %></p>
        </section>

        <section>
            <h2>Your Rights</h2>
            <ul>
                <li><strong>Access:</strong> <%= privacyPolicy.yourRights.access %></li>
                <li><strong>Correction:</strong> <%= privacyPolicy.yourRights.correction %></li>
                <li><strong>Deletion:</strong> <%= privacyPolicy.yourRights.deletion %></li>
            </ul>
        </section>

        <section>
            <h2>Updates to Policy</h2>
            <p><%= privacyPolicy.updatesToPolicy %></p>
        </section>

        <section>
            <h2>Contact Information</h2>
            <p><%= privacyPolicy.contactInformation %></p>
        </section>
    </div>
    <footer class="footer">
        <p>&copy; 2024 Diane Peters Attorneys | All Rights Reserved.</p>
        <p><a href="/terms">terms of service</a> | <a href="">privacy policy</a></p>
        <h5>Developed & hosted by &copy:<a class="" href="www.techservit.co.za">techservit.co.za</a></h5>
    </footer>
</body>
</html>
